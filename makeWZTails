CC=g++
CFLAGS= -Wl,--no-as-needed
LDFLAGS=`root-config --glibs --cflags`
SOURCES= MultilepSUSYfunc.cc WZTails.cc plotCode.cc tdrstyle.cc trilTree.cc trilSelection.cc ../bTag/BTagCalibrationStandalone.cc hnlTools.cc
OBJECTS=$(SOURCES:.cc=.o)
